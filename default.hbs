<!DOCTYPE html>
<html lang="{{{block 'language'}}}">
<head>

    {{!-- Document Settings --}}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{!-- Base Meta --}}
    <title>{{meta_title}}</title>
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{!-- Styles'n'Scripts --}}
    <link rel="stylesheet" type="text/css" href="{{asset "main/css/main.css"}}" />
    <noscript><link rel="stylesheet" href="{{asset "main/css/noscript.css"}}" /></noscript>

    {{!-- code below: replace background image with featured page image, if available and activated in settings. Else, show red background gradient. --}}
    {{#is "post, page"}}
        {{#match @custom.post_and_page_background_img "featured post image"}}
            {{#if feature_image}}
                {{!-- show featured image --}}
                <style>
                    #wrapper>.bg {
                        background-image: url({{asset "images/overlay.png"}}), linear-gradient(0deg, rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url("{{img_url feature_image}}") !important; 
                    }
                </style>
                }
            {{/if}}
        {{/match}}
    {{/is}}

    {{!-- show site cover, if home and available--}}
    {{#is "home"}}
    <style>
        #nav > ul.icons > li > a:hover {
            color: #e10000;
        }
    </style>
        {{#if @site.cover_image}}
        <style>
            #wrapper>.bg {
                background-image: url({{asset "images/overlay.png"}}), linear-gradient(0deg, rgba(0,0,0,0.1), rgba(0,0,0,0.1)),url("{{img_url @site.cover_image}}");
            }
        </style>
        {{/if}}
    {{/is}}

    {{!-- This tag outputs SEO meta+structured data and other important settings --}}
    {{ghost_head}}

</head>
<body class="is-preload {{body_class}}{{#match @custom.title_font "=" "Elegant serif"}} has-serif-title{{/match}}{{#match @custom.body_font "=" "Modern sans-serif"}} has-sans-body{{/match}}">

    <div id="wrapper" {{#is "home"}}class="fade-in"{{/is}}>

        {{!-- Intro --}}
        {{#is "home"}}
        <div id="intro">
            <h1>{{@site.title}}</h1>
            <p>{{@site.description}}</p>
            <ul class="actions">
                <li><a href="#header" class="button icon solo fa-solid fa-arrow-down scrolly">{{t "Continue"}}</a></li>
            </ul>
        </div>
        {{/is}}

        {{!-- Header --}}
        <header id="header">
            {{#is "home"}}
                {{#if @site.logo}}
                    <a href="{{@site.url}}" class="logo image"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>
                {{else}}
                    {{#match @custom.die_linke_publication_logo "=" "Klassisches Logo"}}
                        <a href="{{@site.url}}" class="logo image"><img src="/assets/images/logo_die_linke_rot.png" alt="{{@site.title}}" /></a>
                    {{/match}}
                    {{#match @custom.die_linke_publication_logo "=" "Pfeil"}}
                        <a href="{{@site.url}}" class="logo image"><img src="/assets/images/pfeil_rot.png" alt="{{@site.title}}" /></a>
                    {{/match}}
                {{/if}}
            {{/is}}
            {{^is "home"}}
                {{#if @site.logo}}
                    <a href="{{@site.url}}" class="logo image"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>
                {{else}}
                    {{#match @custom.die_linke_publication_logo "=" "Klassisches Logo"}}
                        <a href="{{@site.url}}" class="logo image"><img src="/assets/images/logo_die_linke_weiss.png" alt="{{@site.title}}" /></a>
                    {{/match}}
                    {{#match @custom.die_linke_publication_logo "=" "Pfeil"}}
                        <a href="{{@site.url}}" class="logo image"><img src="/assets/images/pfeil_weiss.png" alt="{{@site.title}}" /></a>
                    {{/match}}
                {{/if}}
            {{/is}}
            {{!--<a href="{{@site.url}}" class="logo">{{@site.title}}</a>--}}
        </header>

        {{!-- Nav --}}
        {{#if @site.navigation}}
            {{navigation}}
        {{/if}}

        {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
        {{{body}}}

        {{!-- The footer at the very bottom of the screen --}}
        {{> copyright}}

    </div>


    {{!-- Theme Scripts --}}
    <script src="{{asset "main/js/jquery.min.js"}}"></script>
    <script src="{{asset "main/js/jquery.scrollex.min.js"}}"></script>
    <script src="{{asset "main/js/jquery.scrolly.min.js"}}"></script>
    <script src="{{asset "main/js/browser.min.js"}}"></script>
    <script src="{{asset "main/js/breakpoints.min.js"}}"></script>
    <script src="{{asset "main/js/util.js"}}"></script>
    <script src="{{asset "main/js/main.js"}}"></script>

    {{!-- Ghost outputs important scripts & data with the {ghost_foot} tag
    it should always be the very last thing before the closing body tag --}}
    {{ghost_foot}}

</body>
</html>
