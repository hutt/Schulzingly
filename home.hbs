{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Main --}}
<main id="main">

    {{!-- Pages with internal tag #aboutme --}}
    {{#get "pages" filter="tag:hash-aboutme" limit="1"}}
        {{#foreach pages}}
            <article class="post featured">
                <header class="major">
                    <span class="date">{{date format="MMM D, YYYY"}}</span>
                    <h2><a href="{{url}}">{{title}}</a></h2>
                    <p>{{excerpt words="44"}}</p>
                </header>
                {{#if feature_image}}
                <a href="{{url}}" class="image main"><img src="{{img_url feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" /></a>
                {{/if}}
                <ul class="actions special">
                    <li><a href="{{url}}" class="button large">{{t "Read more"}}</a></li>
                </ul>
            </article>
        {{/foreach}}
    {{/get}}

    {{!-- Pages with internal tag #start --}}
    {{#get "pages" limit="all" filter="tag:hash-start"}}
        {{#foreach pages}}
            {{!-- Odd page --}}
            {{#if @odd}}
                <section class="posts">
                    <article>
                        {{#if feature_image}}
                        <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
                        {{/if}}
                    </article>
                </section>
                <section class="posts">
                    <article>
                        <header>
                            <span class="date">{{date format="MMM D, YYYY"}}</span>
                            <h2><a href="{{url}}">{{title}}</a></h2>
                        </header>
                        <p>{{excerpt words="64"}}</p>
                        <ul class="actions special">
                            <li><a href="{{url}}" class="button">{{t "Full Story"}}</a></li>
                        </ul>
                    </article>
                </section>
            {{/if}}

            {{!-- Even page --}}
            {{#if @even}}
                <section class="posts">
                    <article>
                        <header>
                            <span class="date">{{date format="MMM D, YYYY"}}</span>
                            <h2><a href="{{url}}">{{title}}</a></h2>
                        </header>
                        <p>{{excerpt words="64"}}</p>
                        <ul class="actions special">
                            <li><a href="{{url}}" class="button">{{t "Full Story"}}</a></li>
                        </ul>
                    </article>
                </section>
                <section class="posts">
                    <article>
                        {{#if feature_image}}
                        <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
                        {{/if}}
                    </article>
                </section>
            {{/if}}
        {{/foreach}}
    {{/get}}

</main>