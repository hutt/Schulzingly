{{!-- This partial includes critical inline css --}}
{{!-- test, if it's the blog collection page --}}
{{#is "post, page, tag"}}
   {{#is "post"}}
      {{!-- this is a post --}}
      {{> "css/post.critical.css"}}
   {{/is}}

   {{#is "page"}}
      {{!-- this is a page --}}
      {{> "css/page.critical.css"}}
   {{/is}}

   {{#is "tag"}}
      {{!-- this is a tag page --}}
      {{> "css/tag.critical.css"}}
   {{/is}}

{{else}}
   {{!-- this is the blog index --}}
   {{> "css/index.critical.css"}}
{{/is}}