<footer class="gh-footer{{#match @custom.header_and_footer_color "Accent color"}} has-accent-color{{/match}} gh-outer">
    <div class="gh-footer-inner gh-inner">

        <div class="gh-footer-bar">
            <span class="gh-footer-logo is-title">
                {{#if @site.logo}}
                    <picture>
                        <source 
                            srcset="{{img_url @site.logo size="s" format="avif"}} 1x,
                                    {{img_url @site.logo size="m" format="avif"}} 2x"
                            type="image/avif"
                        >
                        <!-- Serve the WebP format if the browser supports it -->
                        <source 
                            srcset="{{img_url @site.logo size="s" format="webp"}} 1x,
                                    {{img_url @site.logo size="m" format="webp"}} 2x"
                            type="image/webp"
                        >
                        <!-- Serve original file format as a fallback -->
                        <img
                            srcset="{{img_url @site.logo size="s"}} 1x,
                                    {{img_url @site.logo size="m"}} 2x"
                            src="{{img_url @site.logo size="m"}}"
                            alt="{{@site.title}}"
                        >
                    </picture>
                {{else}}
                    {{@site.title}}
                {{/if}}
            </span>
            <nav class="gh-footer-icons">
                <ul class="social-icons">
                    {{#if @custom.x}}
                    <li><a href="{{@custom.x}}" class="icon" title="X"><i class="fa-brands fa-twitter"></i></a></li>
                    {{/if}}

                    {{#if @custom.mastodon}}
                    <li><a href="{{@custom.mastodon}}" class="icon" title="Mastodon"><i class="fa-brands fa-mastodon"></i></a></li>
                    {{/if}}

                    {{#if @custom.instagram}}
                    <li><a href="{{@custom.instagram}}" class="icon" title="Instagram"><i class="fa-brands fa-instagram"></i></a></li>
                    {{/if}}

                    {{#if @custom.tiktok}}
                    <li><a href="{{@custom.tiktok}}" class="icon" title="TikTok"><i class="fa-brands fa-tiktok"></i></a></li>
                    {{/if}}

                    {{#if @custom.youtube}}
                    <li><a href="{{@custom.youtube}}" class="icon" title="YouTube"><i class="fa-brands fa-youtube"></i></a></li>
                    {{/if}}

                    {{#if @custom.facebook}}
                    <li><a href="{{@custom.facebook}}" class="icon" title="Facebook"><i class="fa-brands fa-facebook"></i></a></li>
                    {{/if}}

                    {{#if @custom.podcast}}
                    <li><a href="{{@custom.podcast}}" class="icon" title="Podcast"><i class="fa-solid fa-podcast"></i></a></li>
                    {{/if}}
                </ul>
            </nav>
            <div class="gh-footer-menu">
                {{navigation type="secondary"}}
            </div>
        </div>
        
        {{#if @custom.show_newsletter_signup_form}}
            {{#if @site.members_enabled}}
                {{#unless @member}}
                    <section class="gh-footer-signup">
                        <h2 class="gh-footer-signup-header is-title">
                            {{#if @custom.signup_heading}}{{@custom.signup_heading}}{{else}}{{@site.title}}{{/if}}
                        </h2>
                        <p class="gh-footer-signup-subhead is-body">
                            {{#if @custom.signup_subheading}}{{@custom.signup_subheading}}{{else}}{{@site.description}}{{/if}}
                        </p>
                        {{> "email-subscription"}}
                    </section>
                {{/unless}}
            {{/if}}
        {{/if}}

    </div>
</footer>