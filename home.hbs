{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Main --}}
<main id="main">
    {{!-- Pages with internal tag #aboutpage --}}
    {{#get "pages" filter="tag:hash-aboutpage" limit="1"}}
        {{#foreach pages}}
            <article class="post featured">
                <header class="major home">
                    <img src="{{img_url feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                    <h2><a href="{{url}}">{{title}}</a></h2>
                    <p class="home">{{content}}</p>
                </header>
            </article>
        {{/foreach}}
    {{/get}}

    {{!-- Pages with internal tag #start --}}
    {{#get "pages" limit="all" filter="tag:hash-start"}}
        <section class="posts home">
            {{#foreach pages}}
            <article>
                {{#if feature_image}}
                <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
                {{/if}}
                <header>
                    <h2><a href="{{url}}">{{title}}</a></h2>
                </header>
                <p>{{excerpt words="64"}}</p>
                <ul class="actions special">
                    <li><a href="{{url}}" class="button">{{t "Read more"}}</a></li>
                </ul>
            </article>
            {{/foreach}}
        </section>
    {{/get}}
</main>