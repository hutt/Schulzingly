{
    "name": "schulzingly",
    "description": "This is Schulzingly, a text-heavy, article-oriented theme for Ghost.",
    "demo": "https://massively.ghost.io",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "pretest": "gulp build",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Jannis Hutt",
        "email": "themes@hutt.io",
        "url": "https://hutt.io"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Onepager"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/hutt/Schulzingly.git"
    },
    "bugs": "https://github.com/hutt/Schulzingly/issues",
    "contributors": [
        {
            "name": "hutt",
            "email": "themes@hutt.io",
            "url": "https://hutt.io"
        }
    ],
    "devDependencies": {
        "beeper": "2.1.0",
        "gscan": "4.36.3",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-sass": "5.1.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "node-sass": "8.0.0"
    },
    "config": {
        "posts_per_page": 12,
        "custom": {
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "twitter": {
                "type": "text",
                "default": "#",
                "group": "site-wide"
            },
            "mastodon": {
                "type": "text",
                "default": "#",
                "group": "site-wide"
            },
            "instagram": {
                "type": "text",
                "default": "#",
                "group": "site-wide"
            },
            "tiktok": {
                "type": "text",
                "default": "#",
                "group": "site-wide"
            },
            "youtube": {
                "type": "text",
                "default": "#",
                "group": "site-wide"
            },
            "facebook": {
                "type": "text",
                "default": "#",
                "group": "site-wide"
            }
        }
    }
}
